{
    "compilerOptions": {
        "declaration": false,
        "module": "commonjs",
        "target": "ES2020",
        "noImplicitAny": false,
        "sourceMap": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "importHelpers": false,
        "forceConsistentCasingInFileNames": true, 
        "outDir": "dist",
        "baseUrl": ".",
        "skipLibCheck": true, 
        "types": [
          "node",
          "jest"
        ],
        "typeRoots": [
          "@types", 
          "./node_modules/@types"
        ],
        "paths": {
            "@common/*": [
                "../common/src/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "../common/src/**/*.ts"
    ]
}