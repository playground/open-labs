{
  "name": "ieam-service",
  "version": "1.0.0",
  "description": "IEAM Backend Services with Code Engine",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "bundle": "npm run build && webpack --config webpack.config.js",
    "build:doall": "npm run code-engine --task=doall",
    "build:image": "npm run build && npm run bundle && npm run code-engine --task=build",
    "deploy:prod:all": "npm run build:doall --name=ieam-service --env=prod",
    "deploy:dev:all": "npm run build:doall --name=ieam-service  --env=dev",
    "deploy:prod": "npm run code-engine --task=deploy --name=ieam-service --env=prod",
    "deploy:dev": "npm run code-engine --task=deploy --name=ieam-service  --env=dev",
    "image:tag": "npm run code-engine --task=tag --name=ieam-service",
    "image:push": "npm run code-engine --task=push --name=ieam-service",
    "start": "node dist/index.js",
    "watch:build": "webpack --watch",
    "watch:server": "nodemon \"./dist/index.js\" --watch \"./dist\"",
    "watch:start": "npm-run-all --parallel watch:server watch:build",
    "ibm-login": "ibmcloud login --sso && npm run select-target && npm run select-project",
    "select-project": "ibmcloud ce project select -n ieam",
    "select-target": "ibmcloud target -g Default",
    "app-list": "ibmcloud ce app list",
    "get-app": "ibmcloud ce app -n ieam-action-prod",
    "get-logs": "ibmcloud ce app logs -f -n ieam-action-prod",
    "switch-region": "npm run code-engine --task=switchRegion",
    "code-engine": "bin/deploy.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/playground/open-labs/blob/main/code-engine/ieam-service"
  },
  "author": "ljeff@us.ibm.com",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "rxjs": "^7.8.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.7",
    "@typescript-eslint/parser": "^5.56.0",
    "dotenv": "^16.0.3",
    "jest": "^29.5.0",
    "jsonfile": "^6.1.0",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths-webpack-plugin": "^4.0.1",
    "typescript": "^5.0.2",
    "webpack": "^5.76.3",
    "webpack-cli": "^5.0.1",
    "webpack-node-externals": "^3.0.0"
  }
}
