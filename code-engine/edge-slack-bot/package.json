{
  "name": "edge-slack-bot",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "bundle": "npm run build && webpack --config webpack.config.js",
    "build:doall": "npm run code-engine --task=doall",
    "build:image": "npm run build && npm run bundle && npm run code-engine --task=build --name=edge-slack-bot",
    "deploy:prod:all": "npm run build:doall --name=edge-slack-bot --env=prod",
    "deploy:stage:all": "npm run build:doall --name=edge-slack-bot  --env=stage",
    "deploy:dev:all": "npm run build:doall --name=edge-slack-bot  --env=dev",
    "deploy:prod": "npm run code-engine --task=deploy --name=edge-slack-bot --env=prod",
    "deploy:stage": "npm run code-engine --task=deploy --name=edge-slack-bot  --env=stage",
    "deploy:dev": "npm run code-engine --task=deploy --name=edge-slack-bot  --env=dev",
    "image:tag": "npm run code-engine --task=tag --name=edge-slack-bot",
    "image:push": "npm run code-engine --task=push --name=edge-slack-bot",
    "start": "node dist/index.js",
    "watch:build": "webpack --watch",
    "watch:server": "tsc -w & nodemon -w dist dist/index.js",
    "watch:start": "npm-run-all --parallel watch:server watch:build",
    "ibm-login": "ibmcloud login --sso && npm run select-target && npm run select-project",
    "select-project": "ibmcloud ce project select -n ieam",
    "select-target": "ibmcloud target -g Default",
    "app-list": "ibmcloud ce app list",
    "get-app": "ibmcloud ce application get -n edge-slack-bot-prod",
    "get-logs": "ibmcloud ce application logs -f -n edge-slack-bot-prod",
    "get-app-url": "npm run code-engine --task=appUrl",
    "get-app-info": "npm run code-engine --task=appInfo",
    "get-app-logs": "npm run code-engine --task=appLogs",
    "switch-region": "npm run code-engine --task=switchRegion",
    "code-engine": "bin/deploy.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/playground/open-labs/code-engine/edge-slack-bot"
  },
  "author": "ljeff@us.ibm.com",
  "license": "ISC",
  "dependencies": {
    "@slack/bolt": "^3.13.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsonfile": "^6.1.0",
    "request": "^2.88.2",
    "rxjs": "^7.8.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@typescript-eslint/parser": "^5.57.1",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths-webpack-plugin": "^4.0.1",
    "typescript": "^5.0.3",
    "webpack": "^5.77.0",
    "webpack-cli": "^5.0.1",
    "webpack-node-externals": "^3.0.0"
  }
}
